@layout RootLayout
@inherits LayoutComponentBase

<Container>
    <Layout>
        <LayoutHeader Fixed="true">
            <Bar Class="nav-bar" Breakpoint="Breakpoint.Desktop" Background="Background.Primary" ThemeContrast="ThemeContrast.Dark">
                <BarItem>
                    <Image Source="images/brand/brand-image.png" Style="height: 40px; width: 40px; border-radius: 5px;"></Image>
                </BarItem>
                <BarBrand>
                    <BarItem>
                        <BarLink To="/">
                            GA Relax&Sport
                        </BarLink>
                    </BarItem>
                </BarBrand>
                <BarToggler />
                <BarMenu>
                    <BarStart>
                        <BarItem>
                            <BarLink To="/">Начало</BarLink>
                        </BarItem>
                        <BarItem>
                            <BarDropdown>
                                <BarDropdownToggle>
                                    Услуги
                                </BarDropdownToggle>
                                <BarDropdownMenu>
                                    <BarDropdownItem To="/office-massage">
                                        Офис Масажи
                                    </BarDropdownItem>
                                    <BarDropdownItem To="/office-gymnastic">
                                        Офис Гимнастика
                                    </BarDropdownItem>
                                    <BarDropdownItem To="/massages">
                                        Масажи
                                    </BarDropdownItem>
                                    <BarDropdownItem To="/rehabilitation">
                                        Рехабилитация
                                    </BarDropdownItem>
                                    <BarDropdownItem To="/trainings">
                                        Тренировки
                                    </BarDropdownItem>
                                    <BarDropdownItem To="/nutrition">
                                        Хранителни Режими
                                    </BarDropdownItem>
                                </BarDropdownMenu>
                            </BarDropdown>
                        </BarItem>
                        <BarItem>
                            <BarLink To="/pricing">Цени</BarLink>
                        </BarItem>
                        <BarItem>
                            <BarLink To="/images">Снимки</BarLink>
                        </BarItem>
                        <BarItem>
                            <BarLink To="/about-us">За нас</BarLink>
                        </BarItem>
                        <BarItem>
                            <BarLink To="/contacts">Контакти</BarLink>
                        </BarItem>
                    </BarStart>
                    <BarEnd>
                    </BarEnd>
                </BarMenu>
            </Bar>
        </LayoutHeader>
        <LayoutContent Padding="Padding.Is4.OnX">
            @Body
        </LayoutContent>
        <LayoutFooter>
            <Bar Class="footer" Breakpoint="Breakpoint.Desktop" Background="Background.Primary" ThemeContrast="ThemeContrast.Light">
            </Bar>
        </LayoutFooter>
    </Layout>
</Container>
