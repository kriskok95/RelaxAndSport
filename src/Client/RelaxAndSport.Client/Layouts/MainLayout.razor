@layout RootLayout
@inherits LayoutComponentBase

<div class="backdrop" style="@backdrop" @onclick="HideBackdrop"></div>
<header class="main-header">
    <div>
        <button class="toggle-button" @onclick="ShowNavigation">
            <span class="toggle-button__bar"></span>
            <span class="toggle-button__bar"></span>
            <span class="toggle-button__bar"></span>
        </button>
        <a href="index.html" class="main-header__brand">
            <img src="./images/brand/brand-image.png" alt="GA Relax&Sport">
        </a>
    </div>
    <nav class="mobile-nav" style=@mobileNavStyle>
        <ul class="mobile-nav__items">
            <li class="mobile-nav__item">
                <a href="#">Услуги</a>
            </li>
            <li class="mobile-nav__item">
                <a href="#">Цени</a>
            </li>
            <li class="mobile-nav__item">
                <a href="#">За нас</a>
            </li>
            <li class="mobile-nav__item">
                <a href="#">Контакти</a>
            </li>
        </ul>
    </nav>
</header>


@code {
    private string backdrop;
    private string mobileNavStyle;

    private void ShowNavigation(MouseEventArgs e)
    {
        mobileNavStyle = "display: block";
        backdrop = "display: block";
    }

    private void HideBackdrop(MouseEventArgs e)
    {
        backdrop = "display: none";
        mobileNavStyle = "display: none";
    }
}

